<?xml version="1.0" encoding="utf-8"?>
<layout    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="url"
            type="String" />

    </data>



<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
