<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymForYou" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/orange_F79256</item>
        <item name="colorPrimaryDark">@color/orange_F79256</item>
        <item name="colorAccent">@color/orange_F79256</item>
        <item name="colorControlActivated">@color/orange_F79256</item>
        <item name="android:textCursorDrawable">@color/orange_F79256</item>
        <item name="android:windowBackground">@color/white_FDFDFD</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.GymForYou.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GymForYou.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.GymForYou.AppWidgetContainer" parent="Theme.GymForYou.AppWidgetContainerParent" />


</resources>