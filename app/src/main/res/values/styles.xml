<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- headers -->
    <style name="TextAppearance.GymForYou.OverLine" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.GymForYou.Settings" parent="android:Widget">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/margin_normal</item>
    </style>

    <style name="Widget.GymForYou.Settings.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="switchPadding">@dimen/margin_small</item>
        <item name="switchTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.GymForYou.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.GymForYou.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.GymForYou.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


</resources>